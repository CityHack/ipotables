extends layout

block mainContent
  h2=thing.name
  div.well=thing.description
  #thing.row
    .col-md-4.col-md-offset-2
      h3 Input of
      ul.input
        each module in thing.inputOf
          li
            a(href="/module/" + module.id)=module.name
    .col-md-4
      h3 Output of
      ul.output
        each module in thing.outputOf
          li
            a(href="/module/" + module.id)=module.name

  div
    a(href="/thing/list") Back to Thing list
